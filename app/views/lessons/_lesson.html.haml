.card
  .card-header
    = link_to lesson.title, lesson
  .card-body
    = lesson.content
    = lesson.course
  .card-footer
    = link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-warning btn-sm'
    = link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
%p